      script(src='https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js')
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') 连连购房
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | 管理员 
                span.caret
              ul.dropdown-menu
                li
                  a(href='/admin/loginOut') 退出登录
        // /.navbar-collapse
      // /.container-fluid
    .asideMenu
      ul.oneMenuContainer
        li.oneMenu
          a(href='#') 房产信息管理
        li
          ul.twoMenuContainer
            li.twoMenu
              a(href='/admin/?type=allRoom&page=0') 所有房产信息
            li.twoMenu
              a(href='/admin/?type=addRoom') 添加房产信息
      ul.oneMenuContainer
        li.oneMenu
          a(href='#') 用户管理
        li
          ul.twoMenuContainer
            li.twoMenu
              a(href='/admin/?type=allUser') 所有注册用户
      ul.oneMenuContainer
        li.oneMenu
          a(href='#') 系统管理
        li
          ul.twoMenuContainer
            li.twoMenu
              a(href='/admin/?type=bgSet') 首页背景图
    -if(type=="allRoom")
      include allRoom
    -if(type=="addRoom")
      include addRoom
    -if(type=="allUser")
      include allUser
    -if(type=="bgSet")
      include bgSet
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='/javascripts/jquery-3.1.1.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/adminHome.js')
